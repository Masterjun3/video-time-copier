{
    "manifest_version": 3,
    "name": "Video Time Copier",
    "version": "1.0",
    "description": "Copies start/end times of videos.",
    "permissions": [
        "scripting",
        "storage",
        "clipboardWrite"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "gui.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "16": "ico.png",
        "128": "ico128.png"
    }
}
